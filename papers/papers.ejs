<div class="research project-list">
<ul class="list">
    <% for (const item of items) { %>
        <li class="project" <%=metadataAttrs(item) %>>
            <div class="project-content listing-pub-info">
                <% if (item['pub-info'] && item['pub-info'].reference) { %>
                    <p><%= item['pub-info'].reference %></p>
                <% } else { %>
                    <p>
                        <% if (item.author && Array.isArray(item.author)) { %>
                            <% item.author.forEach((auth, index) => { %>
                                <% if (auth.name === "Ellis Franklin") { %>
                                    <% if (auth.url) { %>
                                        <a href="<%- auth.url %>"><strong><%- auth.name %></strong></a>
                                    <% } else { %>
                                        <strong><%- auth.name %></strong>
                                    <% } %>
                                <% } else { %>
                                    <% if (auth.url) { %>
                                        <a href="<%- auth.url %>"><%- auth.name %></a>
                                    <% } else { %>
                                        <%- auth.name || auth %>
                                    <% } %>
                                <% } %>
                                <% if (index < item.author.length - 1) { %>, <% } %>
                            <% }) %>
                        <% } %>
                        , "<%- item.title %>," 
                        <em>Journal Name</em>
                        <% if (item.date) { %> (<%- item.date %>)<% } %>
                    </p>
                <% } %>
            </div>
            
            <% if(item.categories) { %>
            <div class="project-categories">
                <% for (const cat of item.categories) { %>
                    <span class="project-category"><%- cat %></span>
                <% } %>
            </div>
            <% } %>
            
            <div class="project-details-listing">
                <ul class="project-links">
                    <li class="project-link details">
                        <a href="<%- item.path %>">
                            <i class="fa-solid fa-circle-info"></i> Full details Â»
                        </a>
                    </li>
                    <% if (item['pub-info'] && item['pub-info'].links) { %>
                        <% for (const link of item['pub-info'].links) { %>
                    <li class="project-link">
                        <% if (link.local) { %>
                        <a href="<%- item.path.substring(0, item.path.lastIndexOf('/')) %>/<%- link.url %>">
                        <% } else { %>
                        <a href="<%- link.url %>">
                        <% } %>
                            <i class="<%- link.icon %>"></i> <%= link.name %>
                        </a>
                    </li>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </li>
        <% } %>
</ul>
</div>

